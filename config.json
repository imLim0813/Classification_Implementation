{
    "name": "AlexNet",

    "arch": {
        "type": "AlexNet",
        "args": {}
    },
    "data_loader": {
        "args":{
            "batch_size": [32, 64, 128, 256],
            "img_size" : [227, 227]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": [0.05, 0.01, 0.005],
            "weight_decay": 0
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "Accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": [50, 100, 200],

        "save_dir": "saved/",
        "save_period": 10,

        "monitor": "min val_loss",
        "early_stop": 5
    }
}
