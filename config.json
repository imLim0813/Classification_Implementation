{
    "name": "VGGNet_BN",

    "arch": {
        "type": "VGGNet_BN",
        "args": {}
    },
    "data_loader": {
        "args":{
            "batch_size": [128],
            "img_size" : [227, 227]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": [0.0002],
            "weight_decay": 0
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "Accuracy"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 20,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": [100],
        "save_dir": "saved/",
        "save_period": 10,
        "monitor": "min val_loss",
        "early_stop": 15
    }
}
