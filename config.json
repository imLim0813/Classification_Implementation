{
    "name": "AlexNet",

    "arch": {
        "type": "AlexNet",
        "args": {}
    },
    "data_loader": {
        "args":{
            "batch_size": [8, 16, 32, 64],
            "img_size" : [160, 240]
        }
    },
    "optimizer": {
        "type": "Adam",
        "args":{
            "lr": [0.01, 0.001, 0.0001],
            "weight_decay": 0
        }
    },
    "loss": "cross_entropy",
    "metrics": [
        "pixel_accuracy", "dice_score"
    ],
    "lr_scheduler": {
        "type": "StepLR",
        "args": {
            "step_size": 30,
            "gamma": 0.1
        }
    },
    "trainer": {
        "epochs": [1, 5, 10],

        "save_dir": "saved/",
        "save_period": 10,

        "monitor": "min val_loss",
        "early_stop": 10
    }
}